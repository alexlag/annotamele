<% title("Admin Config") %>
<h1>Admin <small>Config</small></h1>
<p><%= link_to "Back to Admin", admin_root_path %></p>

<div role="tabpanel">
 <ul class="nav nav-tabs" role="tablist">
    <li role="presentation">
      <a href="#types" aria-controls="types" role="tab" data-toggle="tab">Question Types <span class="badge"><%= @types.size %></span></a>
    </li>
    <li role="presentation">
      <a href="#questions" aria-controls="questions" role="tab" data-toggle="tab">Questions <span class="badge"><%= @questions.size %></span></a>
    </li>
  </ul>

  <div class="tab-content">

    <div role="tabpanel" class="tab-pane" id="types">
      <br />
      <div class="">
        <button type="button" class="btn btn-success">New</button>
        <button type="button" class="btn btn-danger">Import</button>
      </div>
      <br />
      <% @types.each_with_index do |type, index| %>
        <div class="col-md-6">
          <h4><span class="label label-info">ID: <%= index %></span> <span class="label label-primary"><%= type.export[:type] %></span></h4>
          <div class="panel panel-default">
            <div class="panel-body">
              <%= render type.view_partial %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div role="tabpanel" class="tab-pane" id="questions">
      <br />
      <div class="">
        <button type="button" class="btn btn-success">New</button>
        <button type="button" class="btn btn-danger">Import</button>
      </div>
      <br />
      <% @questions.each do |q| %>
        <div class="panel panel-default">
          <div class="panel-body">
            <dl class="dl-horizontal">
              <dt><strong>Object:</strong></dt>
              <dd><%= q.object %></dd>
              <dt><strong>Context:</strong></dt>
              <dd><%= q.context %></dd>
              <dt><strong>Type:</strong></dt>
              <dd><%= q.type_id %></dd>
            </dl>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>